<h1>포스트만들기</h1>
<div class="">
  <%=simple_form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.input :content, input_html: { class: 'form-control' }, label: '간략설명', placeholder: '간략설명' %>
    </div>
    <div class="form-group">
      <label for="file-input">
        <i class="fa fa-camera" aria-hidden="true">리뷰사진</i>
      </label>
      <%= f.file_field :photo, style: 'display: none', id: "file-input" %>
    </div>
    <%= f.button :submit, class: 'btn btn-default'%>
  <% end %>
</div>
<h1>오늘의 invisible beauty</h1>
