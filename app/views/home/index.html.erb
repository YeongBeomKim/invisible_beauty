<div class="row">
  <div class="col"></div>
  <div class="col" style="margin:12px">
    <%= image_tag 'letter.png' %>
  </div>
  <div class="col"></div>
</div>
<div class="row" style="background-color:#ff0056;padding:20px;">
  <div class="col-3">
    <%= image_tag 'profile.png',style: 'border-radius:80px' %>
  </div>
  <div class="col">
    <%=simple_form_for(@post) do |f| %>
      <div class="form-group">
        <%= f.input :content, input_html: { class: 'form-control' }, label: false, placeholder: '당신의 마음을 움직여 만들어낸 울림을 기록해주세요.' %>
      </div>
      <div class="form-group">
        <label for="file-input" style="float:right;">
          <i class="fa fa-camera" aria-hidden="true">리뷰사진</i>
        </label>
        <%= f.file_field :photo, style: 'display: none', id: "file-input" %>
      </div>
      <%= f.button :submit, class: 'btn btn-default',style: 'background-color:black;color:white',value: '기록하기'%>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-3" style="margin:50px;background-color:#ff0056;max-width:110px;min-height:110px;border-radius:20px;">
    <%=link_to(missions_path,method: :post) do %>
      <i class="fa fa-hand-paper-o fa-5x" aria-hidden="true" style="margin-top:15px;"></i>
    <% end %>
  </div>
  <div class="col">
    <div class="" style="margin:30px;font-size:20px;" >
      <p style="font-size:25px;font-weight:bold">오늘의 미션!</p>
      만나는 사람들과 반갑게 인사할때 </br>
      버튼 누르기!
    </div>
    <div class="" style="float:left;font-weight:bold">
      오늘 전체 미션 달성수 : <%=@all_missions.size %>
    </div>
    <div class="" style="float:right;font-weight:bold">
      나의 미션 달성수 : <%=@user_missions.size %>
    </div>
  </div>
</div>

<div class="">
  <p>Beautiful Story</p>
  <iframe width="47%" height="200px;" src="https://www.youtube.com/embed/dLHi2FNets4?modestbranding=1&loop=1&enablejsapi=1"
  frameborder="0" frameborder="0" allowfullscreen></iframe>
  <iframe style="float:right" width="47%" height="200px;" src="https://www.youtube.com/embed/zlGVxRnKv1k?modestbranding=1&loop=1&enablejsapi=1"
  frameborder="0" frameborder="0" allowfullscreen></iframe>
</div>




<script type="text/javascript">
$('form input').keydown(function (e) {
    if (e.keyCode == 13) {
        var inputs = $(this).parents("form").eq(0).find(":input");
        if (inputs[inputs.index(this) + 1] != null) {
            inputs[inputs.index(this) + 1].focus();
        }else{
          input[inputs.index(this)].submit();
        }
        e.preventDefault();
        return false;
    }
});
</script>
